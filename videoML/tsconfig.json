{
    "compilerOptions": {
        "jsx": "react",
        "allowImportingTsExtensions": true,
        "target": "ES2017",
        "module": "Node16",
        "lib": [
            "ESNext",
            "DOM",
            "WebWorker",
            "DOM.Iterable",
            "dom"
        ],
        "sourceMap": true,
        "outDir": "out",
        "strict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noImplicitOverride": true,
        "moduleResolution": "Node16",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "rootDir": ".",
        "noEmit": true
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts", 
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}
